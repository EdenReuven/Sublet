<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#1C3144"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6"></LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/dosis"
                android:text="Create New Post"
                android:textColor="#1C3144"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/dosis"
                android:text="Details"
                android:textColor="#1C3144"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_circle_full_blue"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_circle_empty_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/addPost_freg_dateFrom_et"
                android:layout_width="145dp"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="From"
                android:inputType="date"
                app:layout_constraintEnd_toStartOf="@+id/addPost_freg_dateTo_et"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <EditText
                android:id="@+id/addPost_freg_dateTo_et"
                android:layout_width="145dp"
                android:layout_height="43dp"
                android:ems="10"
                android:hint="To"
                android:inputType="date"
                app:layout_constraintBottom_toBottomOf="@+id/addPost_freg_dateFrom_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/addPost_freg_dateFrom_et"
                app:layout_constraintTop_toTopOf="@+id/addPost_freg_dateFrom_et" />

            <EditText
                android:id="@+id/addPost_freg_rommaite_et"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Number of Rommaite"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/addPost_freg_people_et"
                app:layout_constraintStart_toStartOf="@+id/addPost_freg_price_et"
                app:layout_constraintTop_toBottomOf="@+id/addPost_freg_location_et" />

            <EditText
                android:id="@+id/addPost_freg_location_et"
                android:layout_width="308dp"
                android:layout_height="53dp"
                android:ems="10"
                android:hint="Location"
                android:inputType="textPostalAddress"
                app:layout_constraintBottom_toTopOf="@+id/addPost_freg_rommaite_et"
                app:layout_constraintStart_toStartOf="@+id/addPost_freg_rommaite_et"
                app:layout_constraintTop_toBottomOf="@+id/addPost_freg_dateTo_et" />

            <EditText
                android:id="@+id/addPost_freg_price_et"
                android:layout_width="145dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Price"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/addPost_freg_people_et"
                app:layout_constraintEnd_toStartOf="@+id/addPost_freg_people_et"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/addPost_freg_people_et" />

            <EditText
                android:id="@+id/addPost_freg_bedroom_et"
                android:layout_width="145dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Bedroom"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/addPost_freg_bathroom_et"
                app:layout_constraintEnd_toStartOf="@+id/addPost_freg_bathroom_et"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/addPost_freg_bathroom_et" />

            <EditText
                android:id="@+id/addPost_freg_bathroom_et"
                android:layout_width="145dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Bathroom"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/addPost2_freg_post_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/addPost_freg_bedroom_et"
                app:layout_constraintTop_toBottomOf="@+id/addPost_freg_people_et" />

            <EditText
                android:id="@+id/addPost_freg_people_et"
                android:layout_width="145dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="People"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/addPost_freg_bathroom_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/addPost_freg_price_et"
                app:layout_constraintTop_toBottomOf="@+id/addPost_freg_rommaite_et" />

            <Button
                android:id="@+id/addPost2_freg_post_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#1C3144"
                android:text="Continue"
                android:textSize="20dp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>